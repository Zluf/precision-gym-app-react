{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true, // ← let TS parse .js/.jsx files
    "checkJs": false, // ← don’t report errors inside them (set true later)
    "isolatedModules": true // ← keeps Babel/esbuild/SWC happy
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
